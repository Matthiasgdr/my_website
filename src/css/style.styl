@import 'config'

body 
    font-family: Montserrat, sans-serif
    color rgb(25,17,77)
    background rgb(255,250,130)
a  
    color: inherit;
    text-decoration: none;
    
.top-bar
    position absolute
    display none
    justify-content flex-end
    top 0
    left 0
    width 100%
    .container-right
        display flex
        justify-content center
        align-items center
        padding 50px 100px
        div
            padding 0 50px
        p
            position relative
            font-weight 600
            transition: border 0.3s 
            padding: 0 0 5px 0
            cursor: pointer
            &:hover::before
                height 3px
            &::before
                content ''
                position absolute
                top 110%
                left 0
                width 100%
                height 0px
                background rgb(25,17,77)
                transition height 0.1s
.container 
    display flex
    justify-content center
    align-items center
    width 100vw
    height 100vh
.presentation
    
    h1
        font-size 30px
        margin 20px 0px
    p
        margin: 10px 0px
    a
        text-decoration: none
        color: inherit
        border-bottom: 1px solid rgb(25,17,77)
        padding 0 0 2px 0
        transition padding 0.2s 
        &:hover
            padding 0 0 4px 0
            color: grey
    ul
        margin 30px 0
        li
            padding: 5px 0